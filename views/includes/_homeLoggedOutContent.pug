include ../mixins/_servicesBox

.home-logged-out-content
    img.logo-standard(src='/images/logo.png', alt='ReadsTracker Logo')
    section.services
        .services__content
            .services__header
                img.services__logo(
                    src='/images/logo.png',
                    alt='ReadsTracker Logo'
                )
            .services__container
                +servicesBox('book', 'Keep track of all your reads')
                +servicesBox('eye', 'Show off how well-read you are')
                +servicesBox('users', 'See what your friends are reading')
    section.auth-form
        if showSignupForm
            .form-container
                form.signup-form.form
                    h1.heading-1.form__heading Signup
                    label.form__label Username
                    input.signup-form__name-field.form__input-field(
                        type='text'
                    )
                    label.form__label Email
                    input.signup-form__email-field.form__input-field(
                        type='email'
                    )
                    label.form__label Password
                    input.signup-form__password-field.form__input-field(
                        type='password'
                    )
                    label.form__label Confirm Password
                    input.signup-form__confirm-password-field.form__input-field(
                        type='password'
                    )
                    input.button-primary.button-block.auth-form__proceed-button(
                        type='submit',
                        value='Signup'
                    )
                    .loading-spinner.signup-form__loading-spinner
                    .auth-form__alternative
                        a.button-outline-primary.button-block(href='/') Login to Existing Account
        else
            .form-container
                form.login-form.form
                    h1.heading-1.form__heading Login
                    label.form__label Email
                    input.login-form__email-field.form__input-field(
                        type='email'
                    )
                    label.form__label Password
                    input.login-form__password-field.form__input-field(
                        type='password'
                    )
                    input.button-primary.button-block.auth-form__proceed-button(
                        type='submit',
                        value='Login'
                    )
                    a.form-link(href='/login/forgot-password') Forgot your password?
                    loading-spinner.login-form__loading-spinner
                .auth-form__alternative
                    a.button-outline-primary.button-block(href='/signup') Create a New Account
