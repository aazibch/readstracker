doctype html
html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='icon' type='image/png' href='/images/favicon.png')

        title #{title}

        link(href='https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap' rel='stylesheet')
        link(href='/fontawesome/css/all.min.css' rel='stylesheet')
        link(href='/css/main.css' rel='stylesheet')
    body
        .alert#alert
        #confirmation-modal.confirmation-modal
            .confirmation-modal__content
                button#confirmation-modal__close-button.confirmation-modal__close-button &#10005;
                #confirmation-modal__query.confirmation-modal__query
                #confirmation-modal__options.confirmation-modal__options
                    button.confirmation-modal__no-button(data-value='false') No
                    | 
                    button.confirmation-modal__yes-button(data-value='true') Yes

        if title !== 'Error'
            include _header
        
        main
            block content

        include _footer

        script(src='/js/bundle.js')